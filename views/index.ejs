<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>To-Do List</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <h1>To-Do List</h1>

  <form action="/add" method="POST">
    <input type="text" name="description" placeholder="New task" required>
    <button type="submit">Add Task</button>
  </form>

  <ul>
    <% tasks.forEach(task => { %>
      <li>
        <form action="/complete/<%= task._id %>" method="POST">
          <input type="checkbox" <%= task.completed ? 'checked' : '' %> onchange="this.form.submit()">
        </form>
        <form action="/edit/<%= task._id %>" method="POST">
          <input type="text" name="description" value="<%= task.description %>" <%= task.completed ? 'disabled' : '' %> required>
          <button type="submit" <%= task.completed ? 'disabled' : '' %>>Edit</button>
        </form>
        <form action="/delete/<%= task._id %>" method="POST">
          <button type="submit">Delete</button>
        </form>
      </li>
    <% }) %>
  </ul>
</body>
</html>
